# =============================================================================
# Finance App — Backend Environment Variables (Production)
# =============================================================================
# Copy this file to .env and fill in your values.
# Generate SECRET_KEY with:  python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# =============================================================================

# Django Core
DEBUG=False
SECRET_KEY=<generate-a-50-char-random-key>
ALLOWED_HOSTS=your-domain.com,your-vps-ip
TIME_ZONE=Asia/Kolkata

# CSRF & CORS (comma-separated, with https://)
CSRF_TRUSTED_ORIGINS=https://your-domain.com
CORS_ALLOWED_ORIGINS=https://your-domain.com

# Database (option 1: single URL)
DATABASE_URL=postgres://finance_user:your-strong-password@localhost:5432/finance_db

# Database (option 2: individual vars — used if DATABASE_URL is not set)
# DATABASE_ENGINE=django.db.backends.postgresql
# DATABASE_NAME=finance_db
# DATABASE_USER=finance_user
# DATABASE_PASSWORD=your-strong-password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# Admin user (created on first deploy only)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=<strong-password>
ADMIN_EMAIL=admin@your-domain.com

# Backup settings
BACKUP_DIR=/var/backups/finance_app
MAX_BACKUPS=30
